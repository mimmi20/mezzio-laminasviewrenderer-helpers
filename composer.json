{
  "name": "mimmi20/mezzio-laminasviewrenderer-helpers",
  "type": "library",
  "description": "Provides a GitHub repository mezzio-laminasviewrenderer-helpers for a PHP library, using GitHub actions.",
  "homepage": "https://github.com/mimmi20/mezzio-laminasviewrenderer-helpers",
  "license": "MIT",
  "authors": [
    {
      "name": "Thomas MÃ¼ller",
      "homepage": "https://github.com/mimmi20",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.4.3 || ^8.0.0",
    "ext-mbstring": "*",
    "laminas/laminas-json": "^3.2.0",
    "mezzio/mezzio-laminasviewrenderer": "^2.3.0"
  },
  "conflict": {
    "container-interop/container-interop": "<1.2.0"
  },
  "require-dev": {
    "infection/infection": "^0.23.0",
    "laminas/laminas-config": "^3.5.0",
    "laminas/laminas-servicemanager": "^3.6.4",
    "mimmi20/coding-standard": "^2.2.3",
    "pepakriz/phpstan-exception-rules": "^0.11.7",
    "phpstan/extension-installer": "^1.1.0",
    "phpstan/phpstan": "^0.12.90",
    "phpstan/phpstan-deprecation-rules": "^0.12.6",
    "phpstan/phpstan-phpunit": "~0.12.21",
    "phpunit/phpunit": "^9.5.6"
  },
  "suggest": {
    "ext-intl": "required to use the Translator",
    "laminas/laminas-config": "^3.5.0, to provide configuration (optional, as arrays and Traversables are also allowed)",
    "laminas/laminas-servicemanager": "^3.6.4, to use the helper factories"
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "laminas": {
      "config-provider": "Mezzio\\LaminasViewHelper\\ConfigProvider"
    }
  },
  "autoload": {
    "psr-4": {
      "Mezzio\\LaminasViewHelper\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MezzioTest\\LaminasViewHelper\\": "tests/"
    }
  },
  "support": {
    "issues": "https://github.com/mimmi20/mezzio-laminasviewrenderer-helpers/issues",
    "source": "https://github.com/mimmi20/mezzio-laminasviewrenderer-helpers"
  }
}
